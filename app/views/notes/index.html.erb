<p id="notice"><%= notice %></p>

<h1>Notes</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Date</th>
      <th>Category</th>
      <th>Keywords</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notes.each do |note| %>
      <tr scope="row">
        <td><%= note.id %></td>
        <td><%= note.date %></td>
        <td><% note.keywords.each do |k| %> <%= k.name %> <% end %></td>
        <td><%= note.category_id %></td>
        <td><%= note.content %></td>
        <td><%= link_to 'Show', note %></td>
        <td><%= link_to 'Edit', edit_note_path(note) %></td>
        <td><%= link_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Note', new_note_path %>
